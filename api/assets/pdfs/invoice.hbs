<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            color: #555;
            margin: 0;
            padding: 0;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            font-size: 16px;
            line-height: 24px;
            font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
            color: #555;
        }

        .invoice-box table {
            width: 100%;
            line-height: inherit;
            text-align: left;
            border-collapse: collapse;
        }

        .invoice-box table td {
            padding: 5px;
            vertical-align: top;
        }

        .invoice-box table tr td:nth-child(4) {
            text-align: right;
        }

        .invoice-box table tr.top table td {
            padding-bottom: 20px;
        }

        .invoice-box table tr.top table td.title h2 {
            margin: 0;
            font-size: 45px;
            line-height: 45px;
            color: #333;
        }

        .invoice-box table tr.information table td {
            padding-bottom: 40px;
        }

        .invoice-box table tr.heading td {
            background: #eee;
            border-bottom: 1px solid #ddd;
            font-weight: bold;
        }

        .invoice-box table tr.item td {
            border-bottom: 1px solid #eee;
        }

        .invoice-box table tr.item.last td {
            border-bottom: none;
        }

        .invoice-box table tr.total td:nth-child(4) {
            border-top: 2px solid #eee;
            font-weight: bold;
        }

        .invoice-box table tr.heading td:nth-child(1),
        .invoice-box table tr.item td:nth-child(1) {
            width: 50%;
        }

        .invoice-box table tr.heading td:nth-child(n+2),
        .invoice-box table tr.item td:nth-child(n+2) {
            width: 16.67%;
        }

        .invoice-box .total-section,
        .invoice-box .payment-status {
            margin-top: 20px;
        }

        .invoice-box .total-section table,
        .invoice-box .payment-status table {
            width: 100%;
        }

        .invoice-box .total-section table tr td,
        .invoice-box .payment-status table tr td {
            padding: 5px;
        }

        .invoice-box .total-section .heading,
        .invoice-box .payment-status .heading {
            font-weight: bold;
        }

        .invoice-box .total-section table tr td:last-child,
        .invoice-box .payment-status table tr td:last-child {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="4">
                    <table>
                        <tr>
                            <td class="title">
                                <h2>Invoice</h2>
                            </td>
                            <td style="text-align: end;">
                                Invoice #: {{invoiceNumber}}<br>
                                Created: {{createdAt}}<br>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr class="information">
                <td colspan="4">
                    <table>
                        <tr>
                            <td>
                                <strong>Bill To:</strong><br>
                                {{name}}<br>
                                {{address}}<br>
                                {{city}}, {{state}}, {{pincode}}<br>
                            </td>
                            <td>
                                <strong>Ship To:</strong><br>
                                {{name}}<br>
                                {{address}}<br>
                                {{city}}, {{state}}, {{pincode}}<br>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr class="heading">
                <td>Item</td>
                <td>Rate</td>
                <td>Quantity</td>
                <td>Price</td>
            </tr>
            {{#each items}}
                <tr class="item {{#if @last}} last{{/if}}">
                    <td>{{product}}</td>
                    <td>{{price}}</td>
                    <td>{{quantity}}</td>
                    <td>{{total}}</td>
                </tr>
            {{/each}}
        </table>
        <div class="total-section">
            <table>
                <tr class="heading">
                    <td>Summary</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Subtotal</td>
                    <td>{{subTotal}}</td>
                </tr>
                
                <tr>
                    <td>Other Charges</td>
                    <td>{{otherCharges}}</td>
                </tr>
                <tr class="total">
                    <td>Total</td>
                    <td>{{totalAmount}}</td>
                </tr>
            </table>
        </div>
        <div class="payment-status">
            <table>
                <tr class="heading">
                    <td>Payment Status</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td>{{paymentStatus}}</td>
                </tr>
                <tr>
                    <td>Transaction Number</td>
                    <td>{{transactionNumber}}</td>
                </tr>
                <tr>
                    <td>Payment Date</td>
                    <td>{{paymentDate}}</td>
                </tr>
                <tr>
                    <td>Outstanding Amount</td>
                    <td>{{outstandingAmount}}</td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
